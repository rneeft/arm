{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "stage": {
        "type": "string",
        "allowedValues": [
          "POC",
          "DEV",
          "TST",
          "PRD"
        ],
        "metadata": {
          "description": "Stage of the deployment, like DEV TST or PRD"
        }
      },
      "product": {
        "type": "string"
      },
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]"
      },
      "locationSmall": {
        "type": "string",
        "defaultValue": "WE",

        "metadata": {
          "description": "Smaller representation of the location for example: WE for WestEurope"
        }
      },
      "kind": {
          "type": "string",
          "defaultValue": "StorageV2",
          "allowedValues": [
            "Storage",
            "StorageV2",
            "BlobStorage",
            "FileStorage",
            "BlockBlobStorage"
          ],
          "metadata": {
              "description": "Indicates the type of storage account."
          }
      },
      "skuName": {
          "type": "string",
          "allowedValues": [
            "Standard_LRS", 
            "Standard_GRS", 
            "Standard_RAGRS", 
            "Standard_ZRS",
            "Premium_LRS",
            "Premium_ZRS",
            "Standard_GZRS",
            "Standard_RAGZRS"
          ],
          "defaultValue": "Standard_RAGRS"
      },
      "accessTier": {
          "type": "string",
          "allowedValues": [
            "Hot", 
            "Cold"
          ],
          "defaultValue": "Hot",
          "metadata": {
            "description": "The Hot Access Tier is ideal for frequently accessed data, and the Cool Access Tier is ideal for infrequently accessed data."
          }
      }
    },
    "variables": {
      "storageAccountName": "[concat('chr', toLower(parameters('product')) ,'sa', toLower(parameters('stage')), toLower(parameters('locationSmall')))]",
    },
    "resources": [
  
      {
        "tags": {
          "displayName": "Storage Account",
          "product": "[parameters('product')]",
          "stage": "[parameters('stage')]"
        },
        "name": "[variables('storageAccountName')]",
        "type": "Microsoft.Storage/storageAccounts",
        "apiVersion": "2019-06-01",
        "location": "[parameters('location')]",
        "kind": "[parameters('kind')]",
        "properties": {
          "accessTier": "[parameters('accessTier')]",
          "supportsHttpsTrafficOnly": true
        },
        "sku": {
          "name": "[parameters('skuName')]"
        },
        "resources": [],
        "dependsOn": []
      }
    ],
    "outputs": {
        "storageAccountName" : {
            "type" : "string",
            "value": "[variables('storageAccountName')]"
        }
    }
  }